<h1>Edit Task</h1>

<%= form_with model: @task, url: "/tasks/#{@task.id}", method: :patch do |f| %>

  <%= f.label :title %><br>
  <%= f.text_field :title %><br>

  <%= f.label :details %><br>
  <%= f.text_area :details %><br>

  <%= f.label :completed %><br>
  <%= f.check_box :completed %><br>

  <%= f.submit "Update Task" %>
<% end %>

<%= link_to "Back", "/tasks" %>
